{
  "editor.formatOnSave": true,
  "editor.rulers": [88, 120],
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 12,
  "explorer.confirmDelete": false,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true, // required
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "files.associations": {
    "*.svelte": "html",
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "emmet.includeLanguages": { "django-html": "html" },
  "python.formatting.provider": "black", // required
  "python.linting.pylintEnabled": false, // required
  "python.linting.flake8Enabled": true, // required
  "python.linting.mypyEnabled": true, // required
  "python.sortImports.args": ["-rc", "-sp isort.cfg"], // required
  "python.showStartPage": false,
  "prettier.semi": false, // required
  "beautify.language": {
    "js": {
      "type": ["javascript", "json", "jsonc"],
      "filename": [".jshintrc", ".jsbeautifyrc"]
    },
    "css": ["css", "less", "scss"],
    "html": ["htm", "html", "django-html"]
  },
  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "[css]": { "editor.tabSize": 2 },
  "[sass]": { "editor.tabSize": 2 },
  "[scss]": { "editor.tabSize": 2 },
  "[json]": { "editor.tabSize": 2 },
  "[vue]": { "editor.tabSize": 2 },
  "[django-html]": {
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true // required
    }
  },
  "explorer.confirmDragAndDrop": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "window.zoomLevel": 0,
  "kite.showWelcomeNotificationOnStartup": false,
  "vsicons.dontShowNewVersionMessage": true,
  "editor.renameOnType": true,
  "kite.showGoBetaNotification": false
}
